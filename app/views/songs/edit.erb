<h1>Edit <%= @song.name %></h1>

<form method="post" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Song Name</label>
  <input type="text" name="song[name]" id="Name" value="<%=@song.name %>">
  <br>

  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name">

  <p><em>Select genre(s):</em></p>
  <h3><label>Genres:</label></h3>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%=genre.name %>" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre) %>><%=genre.name %><br>
  <% end %>

  <br>
  <br>
  <input type="submit" value="Save">


</form>